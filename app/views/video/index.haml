%header#primary-header
	%hgroup
		%h1
			Oberlin Videos
.clear
#slider-wrapper.grid_16
	#slider
		- @featured.each do |video|
			%div.slide{ :id => "slide-#{video.id}" }
				%img{ :id => "image-#{video.id}", :src => "#{video.big_thumbnail_url}" }
				%hgroup{ :id => "hgroup-#{video.id}"}
					%h1
						= video.title
					%h2
						= video.description
				%div.gloss{ :id => "gloss-#{video.id}" }
				%canvas{ :id => "canvas-#{video.id}" }
				= video.embed_html.html_safe
.clear
- @important_tags.each do |tag|
	.tag-wrapper{ :id => "tag-wrapper-#{tag.id}" }
		%header.tag-header
			%hgroup
				%h1
					=tag.name
		%ul
			- tag.videos.each do |video|
				%li
					%a{ :href => ""}
						%img{ :src => "#{video.thumbnail_url}" }
					%hgroup
						%h1
							%a{ :href => "" }
								=video.title
.clear

