%div.letters-wrapper
	- alphabetized_list = {}
	- @tags.each do |t|
		- alphabetized_list["#{t.name[0].upcase}"] = [] if alphabetized_list["#{t.name[0].upcase}"].nil?
		- alphabetized_list["#{t.name[0].upcase}"] << t
	- alphabetized_list.to_a.sort.each do |arr|
		%div.letter
			%hgroup
				%h1
					= arr[0]
			%ul
				- arr[1].each do |t|
					%li
						= link_to t.name, { :controller => :tag, :action => :view, :id => "#{t.name.gsub( " ", "_" )}" }
				.clear
